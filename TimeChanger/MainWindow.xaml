<Window x:Name="MainWindow1" x:Class="TimeChanger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeChanger"
        mc:Ignorable="d"
        Title="TimeChanger" Height="350" Width="525" FontSize="20">
    <Grid>
        <Button x:Name="BtnChange" Content="Change" VerticalAlignment="Top" Margin="10,141,0,0" HorizontalAlignment="Left" Width="80" Click="BtnChange_Click" Height="35" FontSize="20"/>
        <TextBlock x:Name="TbSystemTimeShow" HorizontalAlignment="Left" TextWrapping="Wrap" Margin="100,10,0,272" Width="219" FontSize="20" Text="SystemTime"/>
        <TextBox x:Name="TxtMyTime" HorizontalAlignment="Left" Height="35" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="219" Margin="100,141,0,0" FontSize="20"/>
        <TextBlock x:Name="TbSystemTime" HorizontalAlignment="Left" TextWrapping="Wrap" Text="系统时间" VerticalAlignment="Top" Margin="10,10,0,0" FontSize="20"/>
        <TextBlock x:Name="TbNetworkTime" HorizontalAlignment="Left" TextWrapping="Wrap" Text="网络时间" VerticalAlignment="Top" Margin="10,70,0,0" FontSize="20"/>
        <TextBlock x:Name="TbNetworkTimeShow" HorizontalAlignment="Left" TextWrapping="Wrap" Text="NetworkTime" VerticalAlignment="Top" Margin="100,70,0,0" FontSize="20" RenderTransformOrigin="1.375,0.68" Width="219" Height="38" MouseUp="TbNetworkTimeShow_MouseUp"/>

    </Grid>
</Window>
