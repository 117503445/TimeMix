<Window x:Class="TimeMix.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeMix"
        mc:Ignorable="d"
        Title="设置" Height="318" Width="517" WindowStyle="ThreeDBorderWindow" MouseLeftButtonDown="Window_MouseLeftButtonDown" Closed="Window_Closed" Closing="Window_Closing" Loaded="Window_Loaded">
    <Grid>
        <TabControl>
            <TabItem Header="课表">
                <Grid Background="#FFE5E5E5">
                    <Label Content="课表" HorizontalAlignment="Left" Margin="16,20,0,0" VerticalAlignment="Top"/>
                    <ComboBox x:Name="CboClass" VerticalAlignment="Top" Margin="67,24,236,0" SelectionChanged="CboClass_SelectionChanged"/>
                    <CheckBox x:Name="ChkAutoHide" Content="上课隐藏(X)" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="16,59,0,0"/>
                    <CheckBox x:Name="ChkTomorrowClass" Content="明日课表" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="16,83,0,0" Height="23" Width="71" IsChecked="True" Click="ChkTomorrowClass_Click"/>
                    <Button x:Name="BtnOpenEditTime" Content="编辑课表" HorizontalAlignment="Left" Height="31" Margin="17,106,0,0" VerticalAlignment="Top" Width="130" Click="BtnOpenEditTime_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="时间表">
                <Grid Background="#FFE5E5E5">
                    <Label Content="时间表" HorizontalAlignment="Left" Margin="9,24,0,0" VerticalAlignment="Top"/>
                    <ComboBox x:Name="CboTime" VerticalAlignment="Top" Margin="60,24,243,0" SelectionChanged="CboTime_SelectionChanged"/>
                </Grid>
            </TabItem>
            <TabItem Header="一般设置">
                <Grid Background="#FFE5E5E5">
                    <CheckBox x:Name="ChkAutoStart" Content="开机自启(X)" HorizontalAlignment="Left" Margin="15,44,0,0" VerticalAlignment="Top"/>
                </Grid>

            </TabItem>
            <TabItem Header="高级设置">
                <Grid Background="#FFE5E5E5">
                    <TextBox x:Name="Tbdpi" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="54,10,0,0" TextChanged="Tbdpi_TextChanged"/>
                    <Label Content="DPI" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,8,0,0"/>
                    <Label Content="时间差" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,38,0,0"/>
                    <TextBox x:Name="TbDeltaTime" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="54,40,0,0" TextChanged="TbDeltaTime_TextChanged"/>
                    <Button x:Name="BtnMinusTime" Content="-" HorizontalAlignment="Left" VerticalAlignment="Top" Width="20" Margin="191,40,0,0" Click="BtnMinusTime_Click"/>
                    <Button x:Name="BtnAddTime" Content="+" HorizontalAlignment="Left" VerticalAlignment="Top" Width="20" Margin="216,40,0,0" Click="BtnAddTime_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="开发者选项">
                <Canvas Background="#FFE5E5E5">
                    <TextBlock x:Name="TbChangeHeTime" HorizontalAlignment="Left" Height="25" Margin="24,23,0,0" TextWrapping="Wrap" Text="长河时间 2017/12/2 16:18:42" VerticalAlignment="Top" Width="209"/>
                    <Button x:Name="BtnTimeMix" Content="TimeMix文件夹" Click="BtnTimeMix_Click" Height="30" Canvas.Left="24" Canvas.Top="47" Width="109"/>
                    <Button x:Name="BtnData" Content="Data文件夹" Click="BtnData_Click" Height="30" Canvas.Left="24" Canvas.Top="80" Width="109"/>
                </Canvas>

            </TabItem>
        </TabControl>
    </Grid>
</Window>
